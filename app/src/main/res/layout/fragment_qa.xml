<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/QAFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pigeonstudios.scavenj.view.fragments.assignments.QAFragment"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_weight="0.84"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Question"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/QAQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="0.87"
                android:gravity="center"
                android:maxHeight="120dp"
                android:text="This is where the question will be displayed" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/QAFragment_answer_card_view"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true" >

            <EditText
                android:id="@+id/QAFragment_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="textAutoComplete"
                android:hint="ENTER ANSWER HERE"/>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/QAFragment_submit_button"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:elevation="15dp"
            android:text="Submit Answer"
            />
    </LinearLayout>

</LinearLayout>
